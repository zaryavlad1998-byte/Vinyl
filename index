                        <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
                    </svg>
                </button>
            </div>

            <div class="loading" id="loading">
                <div class="loading-vinyl"></div>
            </div>

            <div class="results-container" id="resultsContainer">
                <div class="empty-state" id="emptyState">
                    <div class="empty-state-icon">üéµ</div>
                    <p>–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –ø–µ—Å–Ω–∏ –∏–ª–∏ –∏—Å–ø–æ–ª–Ω–∏—Ç–µ–ª—è<br>–∏ –Ω–∞–∂–º–∏—Ç–µ –ø–æ–∏—Å–∫</p>
                </div>
                <div class="results-grid" id="resultsGrid"></div>
            </div>
        </div>
    </div>

    <!-- –ê—É–¥–∏–æ —ç–ª–µ–º–µ–Ω—Ç -->
    <audio id="audioPlayer" crossorigin="anonymous"></audio>

    <script>
        // iTunes Search API
        const ITUNES_API = 'https://itunes.apple.com/search';

        // –≠–ª–µ–º–µ–Ω—Ç—ã DOM
        const searchInput = document.getElementById('searchInput');
        const searchBtn = document.getElementById('searchBtn');
        const resultsGrid = document.getElementById('resultsGrid');
        const loading = document.getElementById('loading');
        const emptyState = document.getElementById('emptyState');
        const vinyl = document.getElementById('vinyl');
        const tonearm = document.getElementById('tonearm');
        const dropZone = document.getElementById('dropZone');
        const audioPlayer = document.getElementById('audioPlayer');
        const playBtn = document.getElementById('playBtn');
        const stopBtn = document.getElementById('stopBtn');
        const nowPlaying = document.getElementById('nowPlaying');
        const nowPlayingTitle = document.getElementById('nowPlayingTitle');
        const nowPlayingArtist = document.getElementById('nowPlayingArtist');
        const labelImage = document.getElementById('labelImage');
        const volumeFill = document.getElementById('volumeFill');
        const volumeKnob = document.getElementById('volumeKnob');
        const vuMeter = document.getElementById('vuMeter');
        const playIcon = document.getElementById('playIcon');

        let currentTrack = null;
        let isPlaying = false;
        let volume = 0.7;
        let audioContext = null;
        let analyser = null;
        let dataArray = null;

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è VU –º–µ—Ç—Ä–∞
        function initVUMeter() {
            for (let i = 0; i < 12; i++) {
                const bar = document.createElement('div');
                bar.className = 'vu-bar';
                bar.innerHTML = '<div class="vu-bar-fill" style="height: 0%"></div>';
                vuMeter.appendChild(bar);
            }
        }
        initVUMeter();

        // –ü–æ–∏—Å–∫ –º—É–∑—ã–∫–∏
        async function searchMusic(query) {
            loading.classList.add('active');
            emptyState.style.display = 'none';
            resultsGrid.innerHTML = '';

            try {
                const response = await fetch(
                    `${ITUNES_API}?term=${encodeURIComponent(query)}&media=music&limit=8`
                );
                const data = await response.json();

                loading.classList.remove('active');

                if (data.results.length === 0) {
                    emptyState.innerHTML = `
                        <div class="empty-state-icon">üòî</div>
                        <p>–ù–∏—á–µ–≥–æ –Ω–µ –Ω–∞–π–¥–µ–Ω–æ<br>–ü–æ–ø—Ä–æ–±—É–π—Ç–µ –¥—Ä—É–≥–æ–π –∑–∞–ø—Ä–æ—Å</p>
                    `;
                    emptyState.style.display = 'block';
                    return;
                }

                displayResults(data.results);
            } catch (error) {
                loading.classList.remove('active');
                emptyState.innerHTML = `
                    <div class="empty-state-icon">‚ö†Ô∏è</div>
                    <p>–û—à–∏–±–∫–∞ –ø–æ–∏—Å–∫–∞<br>–ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–æ–∑–∂–µ</p>
                `;
                emptyState.style.display = 'block';
            }
        }

        // –û—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤
        function displayResults(tracks) {
            resultsGrid.innerHTML = '';

            tracks.forEach((track, index) => {
                const albumBox = document.createElement('div');
                albumBox.className = 'album-box';
                albumBox.draggable = true;
                albumBox.dataset.preview = track.previewUrl;
                albumBox.dataset.title = track.trackName;
                albumBox.dataset.artist = track.artistName;
                albumBox.dataset.artwork = track.artworkUrl100.replace('100x100', '300x300');

                albumBox.innerHTML = `
                    <img class="album-cover" src="${track.artworkUrl100.replace('100x100', '300x300')}" alt="${track.collectionName}">
                    <div class="album-vinyl-peek"></div>
                    <div class="album-info">
                        <div class="album-title">${track.trackName}</div>
                        <div class="album-artist">${track.artistName}</div>
                    </div>
                `;

                // –ê–Ω–∏–º–∞—Ü–∏—è –ø–æ—è–≤–ª–µ–Ω–∏—è
                setTimeout(() => {
                    albumBox.classList.add('visible');
                }, index * 100);

                // Drag —Å–æ–±—ã—Ç–∏—è
                albumBox.addEventListener('dragstart', handleDragStart);
                albumBox.addEventListener('dragend', handleDragEnd);

                // –î–≤–æ–π–Ω–æ–π –∫–ª–∏–∫ –¥–ª—è –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏—è
                albumBox.addEventListener('dblclick', () => playTrack(track));

                resultsGrid.appendChild(albumBox);
            });
        }

        // Drag and Drop
        let draggedElement = null;

        function handleDragStart(e) {
            draggedElement = e.target.closest('.album-box');
            draggedElement.classList.add('dragging');
            dropZone.classList.add('active');

            e.dataTransfer.setData('text/plain', JSON.stringify({
                preview: draggedElement.dataset.preview,
                title: draggedElement.dataset.title,
                artist: draggedElement.dataset.artist,
                artwork: draggedElement.dataset.artwork
            }));
        }

        function handleDragEnd() {
            if (draggedElement) {
                draggedElement.classList.remove('dragging');
            }
            dropZone.classList.remove('active');
            draggedElement = null;
        }

        // Drop zone —Å–æ–±—ã—Ç–∏—è
        dropZone.addEventListener('dragover', (e) => {
            e.preventDefault();
        });

        dropZone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropZone.classList.remove('active');

            try {
                const data = JSON.parse(e.dataTransfer.getData('text/plain'));
                loadVinyl(data);
            } catch (error) {
                console.error('Drop error:', error);
            }
        });

        // –ó–∞–≥—Ä—É–∑–∫–∞ –≤–∏–Ω–∏–ª–∞
        function loadVinyl(track) {
            currentTrack = track;

            // –ê–Ω–∏–º–∞—Ü–∏—è –≤—Å—Ç–∞–≤–∫–∏
            vinyl.classList.remove('visible', 'spinning');

            setTimeout(() => {
                labelImage.src = track.artwork;
                vinyl.classList.add('visible');

                // –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é
                nowPlayingTitle.textContent = track.title;
                nowPlayingArtist.textContent = track.artist;
                nowPlaying.classList.add('visible');

                // –í–æ—Å–ø—Ä–æ–∏–∑–≤–æ–¥–∏–º
                setTimeout(() => {
                    playTrack(track);
                }, 500);
            }, 300);
        }

        // –í–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ
        function playTrack(track) {
            if (!track.previewUrl && !track.preview) {
                alert('–ü—Ä–µ–≤—å—é –Ω–µ–¥–æ—Å—Ç—É–ø–Ω–æ');
                return;
            }

            const previewUrl = track.previewUrl || track.preview;

            currentTrack = {
                preview: previewUrl,
                title: track.trackName || track.title,
                artist: track.artistName || track.artist,
                artwork: (track.artworkUrl100 || track.artwork).replace('100x100', '300x300')
            };

            // –û–±–Ω–æ–≤–ª—è–µ–º UI
            labelImage.src = currentTrack.artwork;
            vinyl.classList.add('visible');
            nowPlayingTitle.textContent = currentTrack.title;
            nowPlayingArtist.textContent = currentTrack.artist;
            nowPlaying.classList.add('visible');

            // –í–æ—Å–ø—Ä–æ–∏–∑–≤–æ–¥–∏–º
            audioPlayer.src = previewUrl;
            audioPlayer.volume = volume;
            audioPlayer.play();

            isPlaying = true;
            vinyl.classList.add('spinning');
            tonearm.classList.add('playing');
            updatePlayButton();

            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º –∞–Ω–∞–ª–∏–∑–∞—Ç–æ—Ä
            initAudioAnalyser();
        }

        // –ê–Ω–∞–ª–∏–∑–∞—Ç–æ—Ä –∞—É–¥–∏–æ –¥–ª—è VU –º–µ—Ç—Ä–∞
        function initAudioAnalyser() {
            if (!audioContext) {
                audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const source = audioContext.createMediaElementSource(audioPlayer);
                analyser = audioContext.createAnalyser();
                analyser.fftSize = 32;
                source.connect(analyser);
                analyser.connect(audioContext.destination);
                dataArray = new Uint8Array(analyser.frequencyBinCount);
            }

            updateVUMeter();
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ VU –º–µ—Ç—Ä–∞
        function updateVUMeter() {
            if (!isPlaying || !analyser) return;

            analyser.getByteFrequencyData(dataArray);

            const bars = vuMeter.querySelectorAll('.vu-bar-fill');
            bars.forEach((bar, i) => {
                const value = dataArray[i] || 0;
                const height = (value / 255) * 100;
                bar.style.height = height + '%';
            });

            requestAnimationFrame(updateVUMeter);
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∫–Ω–æ–ø–∫–∏ play
        function updatePlayButton() {
            if (isPlaying) {
                playIcon.innerHTML = '<rect x="6" y="4" width="4" height="16"/><rect x="14" y="4" width="4" height="16"/>';
                playBtn.classList.add('active');
            } else {
                playIcon.innerHTML = '<path d="M8 5v14l11-7z"/>';
                playBtn.classList.remove('active');
            }
        }

        // –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ–º
        playBtn.addEventListener('click', () => {
            if (!currentTrack) return;

            if (isPlaying) {
                audioPlayer.pause();
                isPlaying = false;
                vinyl.classList.remove('spinning');
            } else {
                audioPlayer.play();
                isPlaying = true;
                vinyl.classList.add('spinning');
                updateVUMeter();
            }
            updatePlayButton();
        });

        stopBtn.addEventListener('click', () => {
            audioPlayer.pause();
            audioPlayer.currentTime = 0;
            isPlaying = false;
            vinyl.classList.remove('spinning');
            tonearm.classList.remove('playing');
            updatePlayButton();

            // –°–±—Ä–æ—Å VU –º–µ—Ç—Ä–∞
            const bars = vuMeter.querySelectorAll('.vu-bar-fill');
            bars.forEach(bar => bar.style.height = '0%');
        });

        // –ì—Ä–æ–º–∫–æ—Å—Ç—å
        let isDraggingVolume = false;

        function updateVolume(clientX) {
            const track = document.querySelector('.volume-track');
            const rect = track.getBoundingClientRect();
            let percentage = (clientX - rect.left) / rect.width;
            percentage = Math.max(0, Math.min(1, percentage));

            volume = percentage;
            audioPlayer.volume = volume;

            volumeFill.style.width = (percentage * 100) + '%';
            volumeKnob.style.left = (percentage * 100) + '%';

            // –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä—ã
            const indicators = document.querySelectorAll('.volume-indicator');
            const activeCount = Math.round(percentage * indicators.length);
            indicators.forEach((ind, i) => {
                ind.classList.toggle('active', i < activeCount);
            });
        }

        volumeKnob.addEventListener('mousedown', (e) => {
            isDraggingVolume = true;
            e.preventDefault();
        });

        document.addEventListener('mousemove', (e) => {
            if (isDraggingVolume) {
                updateVolume(e.clientX);
            }
        });

        document.addEventListener('mouseup', () => {
            isDraggingVolume = false;
        });

        document.querySelector('.volume-track').addEventListener('click', (e) => {
            updateVolume(e.clientX);
        });

        // –ü–æ–∏—Å–∫
        searchBtn.addEventListener('click', () => {
            const query = searchInput.value.trim();
            if (query) searchMusic(query);
        });

        searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                const query = searchInput.value.trim();
                if (query) searchMusic(query);
            }
        });

        // –û–∫–æ–Ω—á–∞–Ω–∏–µ —Ç—Ä–µ–∫–∞
        audioPlayer.addEventListener('ended', () => {
            isPlaying = false;
            vinyl.classList.remove('spinning');
            tonearm.classList.remove('playing');
            updatePlayButton();
        });

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –≥—Ä–æ–º–∫–æ—Å—Ç–∏
        updateVolume(volumeKnob.getBoundingClientRect().left);
    </script>
</body>
</html>
